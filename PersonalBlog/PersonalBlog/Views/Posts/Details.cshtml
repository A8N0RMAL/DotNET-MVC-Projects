@model Post

@{
    ViewData["Title"] = Model.Title;
}

<article>
    <div class="d-flex justify-content-between align-items-start mb-3">
        <h1>@Model.Title</h1>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Post</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete Post</a>
    </div>

    <div class="text-muted mb-4">
        <strong>Published by:</strong>
        <a asp-action="ByAuthor" asp-route-author="@Model.Author" class="text-decoration-none">
            @Model.Author
        </a> |
        <strong>Date:</strong> @Model.CreatedDate.ToString("MMM dd, yyyy 'at' hh:mm tt")
        @if (Model.UpdatedDate.HasValue)
        {
            <br />
            <strong>Last Updated:</strong>
 
            @Model.UpdatedDate.Value.ToString("MMM dd, yyyy 'at' hh:mm tt")
        }
    </div>

    <div class="post-content">
        @Html.Raw(Model.Content.Replace("\n", "<br>"))
    </div>
</article>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="ByAuthor" asp-route-author="@Model.Author" class="btn btn-outline-primary">
        More posts by @Model.Author
    </a>
</div>